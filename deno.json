{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "jsx": "react"
  },
  "tasks": {
    "decoder": "cd decoder && deno run ./decoder.ts",
    "decoder-node": "cd decoder && node ./decoder-node.mjs",
    "react-ssr": "cd react-ssr && deno run --allow-net --allow-read ./server.tsx",
    "preact-bundle": "cd preact-bundle && deno run --unstable --allow-net --allow-read ./server.ts",
    "readFile": "cd readFile && deno run --allow-read ./readFile.ts",
    "readFile-bench": "cd readFile && deno bench --unstable --allow-read ./readFile.bench.ts"
  }
}
